<%= form_with model: quote do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% quote.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
    <% quote.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div class="btn btn-blue">
    <%= form.submit %>
  </div>
<% end %>
